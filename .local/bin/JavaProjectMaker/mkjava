#!/bin/bash

projname=$(echo $1 | tr '[:upper:]' '[:lower:]')
projFile="<?xml version=\"1.0\" encoding=\"UTF-8\"?>
<projectDescription>
	<name>%s</name>
	<comment></comment>
	<projects>
	</projects>
	<buildSpec>
		<buildCommand>
			<name>org.eclipse.jdt.core.javabuilder</name>
			<arguments>
			</arguments>
		</buildCommand>
	</buildSpec>
	<natures>
		<nature>org.eclipse.jdt.core.javanature</nature>
	</natures>
</projectDescription>"
echo "Creating java project called:$1"
mkdir -p $1/src/main/java/$projname
mkdir $1/bin
printf $projFile "$projname" > $1/\.project

cat \.classpath > $1\/.classpath
